<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.topdocumentaryfilmscom" name="Top Documentary Films" version="0.1.1" provider-name="six_pack">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.urlresolver"  version="2.1.2"/>
	<import addon="script.module.addon.common" />
	<import addon="plugin.video.youtube" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">www.topdocumentaryfilms.com</summary>
    <description lang="en">Watch documentaries from topdocumentaryfilms.com. All videos are publically available. Visit Kodi.tv forums for support</description>
    <disclaimer lang="en">The author does not host or distribute any of the content displayed by this addon. The author does not have any affiliation with the content provider.</disclaimer>
    <forum>http://forum.kodi.tv/showthread.php?tid=240005</forum>
    <language>English</language>
    <source>https://github.com/six-pack-s/plugin.video.topdocumentaryfilmscom</source>
    <website>http://six-pack-s.github.io/plugin.video.topdocumentaryfilmscom</website>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.tdfcom" name="Top Documentary Films Repository" version="1.0.0" provider-name="six_pack">
	<extension point="xbmc.addon.repository" name="Top Documentary Films Repository">
		<info compressed="false">https://raw.githubusercontent.com/six-pack-s/repository.tdfcom/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/six-pack-s/repository.tdfcom/master/addons.xml.md5</checksum>
		<datadir zip="true">http://192.168.1.65/repo</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Addons related to XBMC for TDF etc</summary>
		<description>Enjoy</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
